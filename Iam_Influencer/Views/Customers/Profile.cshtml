@model Iam_Influencer.Models.Customer

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            Your  Profile
        </h6>
    </div>
    <div class="card-body">
        <div>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Login.Username)
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.username
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Firstname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Firstname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Midname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Midname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Lastname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Lastname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Imagepath)
                </dt>

                <dd class="col-sm-2">
                    <div class="form-group img-container">
                        <label asp-for="Imagepath" class="w-100"></label>
                        <div class="image-wrapper">

                            <!--test for image-->
                            <img src="~/images/@Model.Imagepath"
                                 alt="photo" class="profile-img"
                                 loading="lazy"
                                 id="image_src"
                                 asp-append-version="true" />

                        </div>
                    </div>
                </dd>
            </dl>




        </div>
    </div>
    <div class="card-footer text-muted">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>


