@model Iam_Influencer.Models.Login;
@{
    ViewData["Title"] = "Login";
}


<div class="container">


    <div class="row justify-content-center mt-4">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image">

                            <img src="https://picsum.photos/450/500?random=10"
                                 class="img-fluid" loading="lazy">

                        </div>

                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                <form asp-action="Login" class="user">
                                    <div class="form-group">
                                        <input asp-for="Username" class="form-control form-control-user"
                                               placeholder="Username or Email..." required>
                                        <span asp-validation-for="Username" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" class="form-control form-control-user"
                                               placeholder="Password" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input"
                                                   id="customCheck" name="remMe">
                                            <label class="custom-control-label" for="customCheck">
                                                Remember
                                                Me
                                            </label>
                                        </div>
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger"></div>

                                    <button type="submit" class="mt-3 mb-3 btn btn-primary btn-user btn-block">
                                        Login
                                    </button>

                                </form>

                                <hr>

                                <div class="text-center">
                                    <a class="small" asp-action="Register">Create an Account!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}