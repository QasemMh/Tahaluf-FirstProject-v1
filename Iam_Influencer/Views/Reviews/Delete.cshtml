@model Iam_Influencer.Models.Review

@{
    ViewData["Title"] = "Delete";
}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <span class="text-danger">Are you sure you want to delete this?</span>
        </h6>
    </div>
    <div class="card-body">
        <div>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Text)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Text)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Starcount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Starcount)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Imagepath)
                </dt>
                <dd class="col-sm-2">
                    <div class="form-group img-container">
                        <label asp-for="Imagepath" class="w-100"></label>
                        <div class="image-wrapper">

                            <!--test for image-->
                            <img src="~/images/@Model.Imagepath"
                                 alt="photo" class="profile-img"
                                 loading="lazy"
                                 id="image_src"
                                 asp-append-version="true" />

                        </div>
                    </div>
                </dd>
            </dl>
        </div>
    </div>
    <div class="card-footer text-muted">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
